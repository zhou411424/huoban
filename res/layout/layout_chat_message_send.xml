<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <Button
        android:id="@+id/chat_button_send"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/layout_send_bar_button"
        android:gravity="center"
        android:layout_marginRight="@dimen/padding_default"
        android:text="@string/content_send"
        android:textColor="@color/foot_orange"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/chat_message"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="@dimen/padding_default"
        android:layout_marginTop="10dip"
        android:paddingLeft="10dp"
        android:layout_toLeftOf="@+id/chat_button_send"
        android:background="@drawable/layout_send_bar_edittext"
        android:inputType="text"
        android:textSize="14sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="@color/line" />

</RelativeLayout>