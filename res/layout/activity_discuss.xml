<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey2"
    tools:context=".MainActivity" >

    <include
        android:id="@+id/head_layout"
        layout="@layout/title_bar_with_ibtn_left_and_right" />

    <com.example.huoban.widget.pull.RefreshListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/content_input_layout"
        android:layout_below="@+id/head_layout"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="12dip"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        android:descendantFocusability="blocksDescendants"
        android:divider="@color/grey2"
        android:dividerHeight="12dp"
        android:scrollbars="none" >
    </com.example.huoban.widget.pull.RefreshListView>

    <RelativeLayout
        android:id="@+id/content_input_layout"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5"
        android:visibility="gone" >

        <EditText
            android:id="@+id/content_input"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_margin="10dip"
            android:layout_toLeftOf="@+id/content_send"
            android:background="@color/white"
            android:hint="@string/content_add"
            android:inputType="text"
            android:maxLines="10"
            android:minLines="6"
            android:paddingLeft="5dip"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/content_send"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_margin="10dip"
            android:gravity="center"
            android:text="@string/content_send"
            android:textColor="@color/foot_orange"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>