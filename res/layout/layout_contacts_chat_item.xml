<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="15dp" >

        <com.example.huoban.widget.other.CircleImageView
            android:id="@+id/chat_item_left_icon"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/app_name"
            android:focusable="false" />

        <com.example.huoban.widget.other.CircleImageView
            android:id="@+id/chat_item_right_icon"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/app_name"
            android:focusable="false" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/chat_item_right_icon"
            android:layout_toRightOf="@id/chat_item_left_icon" >

            <TextView
                android:id="@+id/chat_item_left_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/chatfrom_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="left|center_vertical"
                android:lineSpacingExtra="2dp"
                android:minHeight="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#ff000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/chat_item_right_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/chatto_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="left|center_vertical"
                android:lineSpacingExtra="2dp"
                android:minHeight="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#ff000000"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>