<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.example.huoban.widget.pull.circle.CircleListView
        android:id="@+id/PullToRefreshListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@color/line"
        android:dividerHeight="0.5dip"
        android:listSelector="@android:color/transparent" >
    </com.example.huoban.widget.pull.circle.CircleListView>

    <RelativeLayout
        android:id="@+id/content_input_layout"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/content_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text="@string/content_send"
            android:textColor="@color/foot_orange"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/content_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dip"
            android:layout_marginTop="8dip"
            android:layout_toLeftOf="@+id/content_send"
            android:background="@color/white"
            android:hint="@string/content_add"
            android:inputType="text"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>