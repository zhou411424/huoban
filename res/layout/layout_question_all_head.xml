<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/question_all_head_image"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:src="@drawable/question_all_head_image" />

    <TextView
        android:id="@+id/question_all_head_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/question_all_head_image"
        android:background="#59000000"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/padding_default"
        android:paddingTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/question_all_head_button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/question_all_head_button"
        android:clickable="false"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="精选问题推荐"
        android:textColor="#FFFFFF" />

</RelativeLayout>