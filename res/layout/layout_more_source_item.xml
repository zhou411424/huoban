<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/more_source_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/more_source_item_operate"
        android:layout_width="55dp"
        android:layout_height="31dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:background="#FFFFFF"
        android:src="@drawable/more_source_download" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_default"
        android:layout_toLeftOf="@id/more_source_item_operate"
        android:layout_toRightOf="@id/more_source_item_icon"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/more_source_item_title"
            android:layout_width="fill_parent"
            android:singleLine="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/more_source_item_desc"
            android:layout_width="fill_parent"
            android:singleLine="true"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>