<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/bar"
        layout="@layout/title_bar_with_ibtn_left_and_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bar"
        android:orientation="vertical" >

        <com.example.huoban.widget.pull.RefreshListView
            android:id="@+id/xListView"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:cacheColorHint="#00000000"
            android:choiceMode="singleChoice"
            android:descendantFocusability="blocksDescendants"
            android:divider="@color/gray1"
            android:dividerHeight="0dp"
            android:listSelector="#00000000"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:stackFromBottom="true"
            android:scrollbars="none" >
        </com.example.huoban.widget.pull.RefreshListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="vertical" >

            <View
                android:id="@+id/viewLine"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#b2b2b2" />

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <com.example.huoban.widget.other.CustomButton
                    android:id="@+id/tvService"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    Image="@drawable/icon"
                    ImageID="@+id/imageview_about_button"
                    Text="@string/superisor_service"
                    TextID="@+id/textview_about_button"
                    android:clickable="true"
                    android:gravity="center_horizontal" >
                </com.example.huoban.widget.other.CustomButton>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:background="#b2b2b2" />

                <com.example.huoban.widget.other.CustomButton
                    android:id="@+id/tvQusetion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    Image="@drawable/icon"
                    ImageID="@+id/imageview_about_button"
                    Text="@string/superisor_qusetion"
                    TextID="@+id/textview_about_button"
                    android:clickable="true"
                    android:gravity="center_horizontal" >
                </com.example.huoban.widget.other.CustomButton>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:background="#b2b2b2" />

                <com.example.huoban.widget.other.CustomButton
                    android:id="@+id/tvContactMy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    Image="@drawable/icon"
                    ImageID="@+id/imageview_about_button"
                    Text="@string/superisor_ontact_my"
                    TextID="@+id/textview_about_button"
                    android:clickable="true"
                    android:gravity="center_horizontal" >
                </com.example.huoban.widget.other.CustomButton>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pref_bg_body" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewPopu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dip"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/viewService"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/viewQusetion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/viewContactMy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>