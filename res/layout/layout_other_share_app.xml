<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <include
        android:id="@+id/other_share_app_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        layout="@layout/title_bar_with_ibtn_left_and_right" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_default"
        android:paddingRight="@dimen/padding_default" >

        <ImageView
            android:id="@+id/iv_share_app_code"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="15dp"
            android:background="@drawable/erweima_bg"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/xianxia" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="扫描下载装修伙伴" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F5F5F5"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="分享到" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="15dp" >

            <include
                android:id="@+id/share_app_weibo"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                layout="@layout/layout_share_item"
                android:visibility="gone" />

            <include
                android:id="@+id/share_app_weixin"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                layout="@layout/layout_share_item" />

            <include
                android:id="@+id/share_app_circlefriend"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                layout="@layout/layout_share_item" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>