<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/contacts_item_back"
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:background="#00FF00" >

        <Button
            android:id="@+id/contacts_back_delete"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/contacts_delete_selector"
            android:gravity="center"
            android:text="删除"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contacts_item_front"
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:background="#FFFFFF" >

        <com.example.huoban.widget.other.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/contacts_front_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/b_ren" />
        <TextView
            android:id="@+id/contacts_front_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="" />

        <TextView
            android:id="@+id/contacts_front_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/contacts_front_tv_right"
            android:layout_toRightOf="@id/contacts_front_icon" />
    </RelativeLayout>

</FrameLayout>