<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/bg_diary" >
    
    <com.example.huoban.widget.other.RoundImageView 
        android:id="@+id/iv_my_diary_comment_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"/>
    
    <TextView
        android:id="@+id/tv_my_diary_comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/iv_my_diary_comment_pic"
        android:maxLines="2"
        android:textSize="@dimen/text_size_big_b"/>
    
    <TextView 
        android:id="@+id/tv_my_diary_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_my_diary_comment_pic"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/text_size_medium"
        android:textColor="#ababab"/>
    
    <TextView
        android:id="@+id/tv_my_diary_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_my_diary_comment_content"
        android:drawableLeft="@drawable/img_comment_icon"
        android:drawablePadding="5dp"
        android:textSize="@dimen/text_size_medium"/>
    
    <TextView 
        android:id="@+id/tv_my_diary_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_my_diary_comment_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_size_medium"
        android:textColor="#ababab"/>
    

</RelativeLayout>

