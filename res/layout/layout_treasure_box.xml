<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <include
        android:id="@+id/treasure_box_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        layout="@layout/title_bar_with_ibtn_left_and_right" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/treasure_box_title_bar"
        android:layout_marginLeft="@dimen/padding_default"
        android:layout_marginRight="@dimen/padding_default"
        android:orientation="vertical" >

        <include
            android:id="@+id/treasure_box_plan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_treasure_box_item" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line" />

        <include
            android:id="@+id/treasure_box_bill"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_treasure_box_item" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line" />
        <include
            android:id="@+id/treasure_budget_setting"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/layout_treasure_box_item" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/line" />
        </LinearLayout>

</RelativeLayout>