<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_default"
    android:background="@color/defaule" >

    <ImageButton
        android:id="@+id/ibtn_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_default"
        android:layout_centerVertical="true"
        android:background="@null"
        android:contentDescription="@null"
        android:paddingLeft="@dimen/padding_default"
        android:paddingRight="@dimen/padding_default"
        android:src="@drawable/black_search" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_default"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_default"
        android:paddingRight="@dimen/padding_default"
        android:text="@string/cancel"
        android:textColor="@color/foot_orange"
        android:textSize="@dimen/text_size_medium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_right"
        android:layout_toRightOf="@id/ibtn_left"
        android:background="@null"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textColor="@color/color_light_black"
        android:textSize="@dimen/text_size_medium_b" />

</RelativeLayout>