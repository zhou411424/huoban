<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_bar_with_ibtn_left_and_right" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/color_grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:background="#fff9f7"
                android:padding="15dip" >

                <ImageView
                    android:id="@+id/iv_expret_head"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_expert_female" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/iv_expret_head"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_expert_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_orange"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/tv_expert_work_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:textColor="@color/color_light_black"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:text="@string/expert_a"
                android:textColor="@color/color_light_black"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:id="@+id/ll_honor_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@drawable/round_shape"
                android:orientation="vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="15dip"
                android:text="@string/expert_b"
                android:textColor="@color/color_light_black"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:id="@+id/ll_work_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@drawable/round_shape"
                android:orientation="vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" >
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:layout_marginTop="15dip"
                android:text="@string/expert_c"
                android:textColor="@color/color_light_black"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_words"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@drawable/round_shape"
                android:padding="10dip"
                android:textColor="@color/color_light_black"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_make_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/selector_round_shape_orange"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:gravity="center"
                android:text="@string/i_make_questions"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>