<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <include
        android:id="@+id/user_info_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        layout="@layout/title_bar_with_ibtn_left_and_right" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/user_info_title_bar"
        android:background="#FFFFFF"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/user_info_icon"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/padding_default"
                android:layout_marginRight="@dimen/padding_default" >

                <TextView
                    android:id="@+id/tv_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_item_desc_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

                <com.example.huoban.widget.other.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_item_right"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/b_ren" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_default"
                android:layout_marginRight="@dimen/padding_default"
                android:orientation="vertical" >

                <include
                    android:id="@+id/user_info_name"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    layout="@layout/layout_user_info_item" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line" />

                <include
                    android:id="@+id/user_info_sex"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    layout="@layout/layout_user_info_item" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line" />

                <include
                    android:id="@+id/user_info_img_code"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    layout="@layout/layout_user_info_item" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="#efefef"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_default"
                android:layout_marginRight="@dimen/padding_default"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line" />

                <include
                    android:id="@+id/user_info_time"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    layout="@layout/layout_user_info_item" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line" />

                <include
                    android:id="@+id/user_info_apartment"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    layout="@layout/layout_user_info_item"
                    android:visibility="gone" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"
                    android:visibility="gone" />

                <include
                    android:id="@+id/user_info_style"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    layout="@layout/layout_user_info_item"
                    android:visibility="gone" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"
                    android:visibility="gone" />

                <include
                    android:id="@+id/user_info_company"
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    layout="@layout/layout_user_info_item"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="#efefef"
                android:visibility="gone" />

            <include
                android:id="@+id/user_info_change_pw"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/padding_default"
                android:layout_marginRight="@dimen/padding_default"
                layout="@layout/layout_user_info_item" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/padding_default"
                android:layout_marginRight="@dimen/padding_default"
                android:background="@color/line" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>